// backend/tsconfig.json
{
  "compilerOptions": {
    // "composite": true,
    "target": "ES2020",
    "module": "CommonJS",       // Compiles imports to 'require'  // Changed from NodeNext
    "moduleResolution": "Node", // Allow imports without .js      // Changed from NodeNext
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}